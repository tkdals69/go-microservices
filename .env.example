# ===== 필수 =====
CLOUD=azure             # aws | azure
ENV=dev                 # dev | staging | prod
PORT=8080               # 1024+ 권장
HMAC_SECRET=change-me-32bytes-min  # >=32바이트 권장

# Postgres (Azure DB for PostgreSQL)
DB_URL=postgres://liveops:STRONG_PASS@<pg-name>.postgres.database.azure.com:5432/liveops?sslmode=require

# Redis (Azure Cache for Redis)
REDIS_URL=rediss://:PRIMARY_KEY@<name>.redis.cache.windows.net:6380/0

# ===== 메시지 버스(선택) =====
BUS_KIND=inmem              # inmem | servicebus
BUS_CONN=                   # Service Bus Connection String

# ===== 선택 =====
LB_WINDOWS=daily,weekly,seasonal
LB_TOPN=100
SNAPSHOT_CRON=0 */15 * * * *
ANOMALY_Z=3.5
BLOCK_SEC=60
RATE_LIMIT_MAX=50
IDEMP_TTL=300s
